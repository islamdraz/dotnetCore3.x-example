<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    
    <environment include="Development">
        <link  rel="stylesheet" asp-href-include="css/*" asp-href-exclude="css/all.min.css" />
    </environment>
    
    <environment exclude="Development">
        <link  rel="stylesheet" asp-href-include="css/all.min.css" />
    </environment>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img src="~/img/logo.jpg" alt="logo" style="width: 100px;" />
        </div>
        
        <div class="col-md-8 ">
            <h2 class="card-title">@ViewBag.Title</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @RenderBody()

        </div>
    </div>

</div>
</body>
</html>
